<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wchat.secondhand.user.UserMapper">
<select id = "queryUser" parameterType="com.wchat.secondhand.user.User" resultType="com.wchat.secondhand.user.User">
        select *
        from t_user
        where
        password = #{password}
    </select>
</mapper>